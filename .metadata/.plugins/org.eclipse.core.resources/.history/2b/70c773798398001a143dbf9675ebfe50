	         while(result.next()) {
					GroupeFormes.add(new GroupeForme(result.getString("idEnsemble"), result.getArray("idForme") ));
				}
	        
			 	
			 
			
		} catch (SQLException e) {
			e.printStackTrace();
		}
		return GroupeFormes;
	}

